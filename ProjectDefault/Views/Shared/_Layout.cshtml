<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/16.13.0/umd/react.development.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react-dom/16.13.0/umd/react-dom.development.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/remarkable/1.7.1/remarkable.min.js"></script>

    <style type="text/css">

.loading 
{
    width: 100%;
    height: 100%;
    background-color: black;
    opacity: 60%;
    display: none;
    visibility: hidden;
    position: absolute;
    z-index: 1000;
}

.insideloading {
    background-color: transparent;
    width: 10%;
    height: 10%;
    margin-left: 45%;
    margin-right: 45%;
    margin-top: 45%;
    margin-bottom: 45%;
    display: block;
    position: absolute;
    z-index: 1001;
}
        
    </style>
</head>
<body>
    
    <div class="loading">
        <div class="insideloading">
            <img style="width:100%;height:100%" src="~/loading.gif"/>
        </div>
    </div>    
    
    @RenderBody()

   @await RenderSectionAsync("Scripts", required: false)   
</body>
</html>
